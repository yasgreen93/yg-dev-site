extends layout

block content
  .main__inner
    h1.header__title Contact
    .content__wrapper
      .contact-form__wrapper
        form.contact-form(action="#", method="post" autocomplete="off")
          .contact-form__inner-top
            input.input__box.input__box--name(type="text", name="name" placeholder="Name" required)
            input.input__box.input__box--email(type="email", name="email" placeholder="Email" required)
          .contact-form__inner-bottom
            input.input__box.input__box--subject(type="text", name="subject" placeholder="Subject")
            textarea.input__box.input__box--message(name="message", cols="30", rows="10" placeholder="Message" required)
            input.input__box.input__box--submit(type="submit", value="Send message")
